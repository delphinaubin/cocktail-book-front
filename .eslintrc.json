{
    "extends": "airbnb",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018,
        "ecmaFeatures": {
          "jsx": true
        }
    },
    "plugins": [
        "react"
      ],
    "env": {
        "browser": true,
        "node": true,
        "jest": true
    },
    "rules": {
        "react/prefer-stateless-function": 0,
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error"
    }
}